<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.codenotes.DashboardController">
    <top>
        <HBox style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" spacing="20" alignment="CENTER_LEFT">
            <padding>
                <Insets top="15" right="25" bottom="15" left="25" />
            </padding>
            <Text text="Code Notes Dashboard" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: #2d3748;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="logoutButton" text="Logout" style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 15;" />
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="20">
            <Text text="Welcome to Code Notes!" style="-fx-font-size: 32; -fx-font-weight: bold; -fx-fill: #4a5568;" />
            <Text text="Your intelligent code snippet manager" style="-fx-font-size: 18; -fx-fill: #718096;" />
            <Button text="Get Started" style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-background-radius: 8; -fx-pref-height: 45; -fx-pref-width: 200;" />
        </VBox>
    </center>
</BorderPane>