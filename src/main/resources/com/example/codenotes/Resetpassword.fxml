<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.codenotes.PasswordResetController"
            prefWidth="400" prefHeight="320" style="-fx-background-color: white;">

    <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">

        <!-- Top Icon (placeholder - add your image later) -->
        <Label text="Icon" style="-fx-font-size: 24; -fx-font-weight: bold;" />  <!-- Replace with ImageView once images are added -->

        <!-- Container for Tabs and content -->
        <VBox fx:id="contentContainer" spacing="10" style="-fx-background-color: #f9f9f9; -fx-background-radius: 15; -fx-padding: 20;">

            <!-- Custom tab-like toggle using HBox with Buttons -->
            <HBox fx:id="toggleHBox" spacing="0" style="-fx-background-color: #ddd; -fx-background-radius: 15;">

                <Button fx:id="loginButton" text="Login" onAction="#switchToLogin"
                        style="-fx-padding: 10 30; -fx-font-weight: bold; -fx-text-fill: #555; -fx-background-color: transparent; -fx-border-width: 0;" />

                <Button fx:id="signupButton" text="Sign-up" onAction="#switchToSignup"
                        style="-fx-padding: 10 30; -fx-font-weight: bold; -fx-text-fill: #555; -fx-background-color: transparent; -fx-border-width: 0;" />

                <!-- Active toggle (Reset) -->
                <Button fx:id="resetButton" text="Reset" onAction="#switchToReset"
                        style="-fx-padding: 10 30; -fx-background-color: white; -fx-background-radius: 15; -fx-font-weight: bold; -fx-text-fill: black; -fx-border-width: 0;" />

            </HBox>

            <!-- Email Label -->
            <Label text="Email" style="-fx-font-weight: bold; -fx-padding: 10 0 5 0;" />

            <!-- Email input (no icon to avoid errors) -->
            <TextField fx:id="emailField" promptText="your@email.com" disable="true" editable="false"
                       style="-fx-background-color: #e5e5e5; -fx-background-radius: 10; -fx-padding: 7 10; -fx-border-width: 0; -fx-opacity: 1; -fx-text-fill: #888;" prefHeight="35" />

            <!-- Small description -->
            <Label text="We'll send you a password reset link"
                   style="-fx-font-size: 10; -fx-text-fill: #888; -fx-padding: 5 0 15 0;" />

            <!-- Send Reset Link button -->
            <Button fx:id="sendResetButton" text="Send Reset Link" onAction="#sendResetLink" />
                    style="-fx-background-color: black; -fx-text-fill: white; -fx-font-weight: bold;" prefHeight="35"/>
        </VBox>

        <!-- Footer note -->
        <Label text="Code Notes Â· Organize and annotate your code snippets"
               style="-fx-font-size: 11; -fx-text-fill: grey; -fx-padding: 0 0 10 0;" />
    </VBox>
</AnchorPane>

